@model VariableModel;

<h1 class="display-4">Kurs Kayıt Ekranı</h1>
<form method="post" asp-action="CourseApplyView">
    <div class="form-group my">
        <label asp-for="Id">Id</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group my">
        <label asp-for="email">E-mail</label>
        <input asp-for="email" class="form-control" />
    </div>
    <div class="form-group my">
        <label asp-for="adi">Adı</label>
        <input asp-for="adi" class="form-control" />
    </div>
    <div class="form-group my">
        <label asp-for="soyadi">Soyadı</label>
        <input asp-for="soyadi" class="form-control" />
    </div>
    <div class="form-group my">
        <label asp-for="yasi">Yaş</label>
        <input asp-for="yasi" class="form-control" />
    </div>
    <fieldset>
        <legend>Kurs seçimi</legend>
        <p>
            <input id="apic" type="radio" asp-for="kursSecimi" value="Java" />
            <label>Java</label>
        </p>
        <p>
            <input id="apb" type="radio" asp-for="kursSecimi" value="C++" />
            <label>C++</label>
        </p>
        <p>
            <input id="apia" type="radio" asp-for="kursSecimi" value="Pyhton" />
            <label>Python</label>
        </p>
    </fieldset>
    <div class="form-group my">
        <button class="btn btn-secondary" type="submit" asp-controller="Course" asp-action="CourseApplyView">Kaydol</button>
        <a class="btn btn-secondary" href="/home">Home</a>

    </div>

</form>

